
<div style="margin-top: 50px;" class="container">
<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul  class="tabs">

        {{#if registerActive}} 
           <li class="tab col s6"><a style="color: black;" href="#login">Login</a></li>
           <li class="tab col s6"><a style="color: black;" class="active" href="#register">Register {{registerActive}}</a></li>
        {{else}}
          <li class="tab col s6"><a style="color: black;" class="active" href="#login">Login</a></li>
          <li class="tab col s6"><a style="color: black;" href="#register">Register</a></li>
        {{/if}}

      </ul>
    </div>
    <div  id="login" class="col s6 ">  

    <strong class="auth_text" id="_title">Form login</strong>
    
    {{#if errorLogin}}
      <p class="alert">{{errorLogin}}</p>
    {{/if}}
      <br>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="email" name="email" type="email" class="validate" value="{{data.email}}" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Input email"></span>
        </div>

        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Input password"></span>
        </div>
        

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary " type="submit">Sign in</button>

        <a style="color: black; margin-left: 30px" href="/auth/reset">Forgot your password?</a>
      </form>
    </div>
    <div   id="register" class="col s6 offset-s3">

      <strong class="auth_text" id="_title">Form register</strong>
      
    {{#if errorRegister}}
      <p class="alert">{{errorRegister}}</p>
    {{/if}}
      <br>
      <form action="/auth/register" method="POST" novalidate>

        
        <div class="input-field">
          <input id="remail" name="email" type="email" class="validate" value="{{data.email}}" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Input email"></span>
        </div>


        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" value="{{data.name}}" required>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Input name"></span>
        </div>

        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required>
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Input password"></span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required>
          <label for="confirm">Confirm password</label>
          <span class="helper-text" data-error="Confirm password"></span>
        </div>
        
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary" type="submit">Sign up</button>
      </form>
    </div>
  </div>
</div>
</div>