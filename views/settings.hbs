
<div style="margin-top: 80px;" class="row container">
    {{#if user.avatarUrl}}
    <div class="col s6">
        <img class="avatart" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">   
    </div>
    {{else}}
        <div class="col s6">
           <p>No avatar</p>
        </div>
     
    {{/if}}
    <div class="col s6">
        <form method="POST" action="/settings" enctype="multipart/form-data">
            <p>Your email: <strong>{{user.email}}</strong></p>

            <div class="input-field">
                <input name="name" id="name" type="text" class="validate" value="{{user.name}}" required>
                <label for="name">Input name</label>
                <span class="helper-text" data-error="Enter name"></span>
            </div>

            <div class="file-field input-field">
            <div class="btn">
                <span>Avatar</span>
                <input type="file" name="avatar">
            </div>
                <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
                </div>
            </div>
            
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn">Change</button>
        </form>
    </div>
</div>


