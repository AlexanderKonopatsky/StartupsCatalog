<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">



<div class="container" style="margin-top: 20px">
    <form action="" method="POST">

        <div class="row">
            <div class="col-sm">
                <input name="status" type="text"  id="status" placeholder="Status">
            </div>
            <div class="col-sm">
                <input name="title" type="text" id="title"  placeholder="Title">
            </div>
            <div class="col-sm">         
                <input name="email" type="text"  id="email" placeholder="Email">
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

         <button  type="submit" class="btn btn-primary">Search</button>
        </div>

    </form>
</div>

{{#if emptyResult }} 
    <div> Not found</div>
{{else}}

    <table  class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">â„–</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Avatar</th>
                <th scope="col">Title</th>
                <th scope="col">Desc</th>
                <th scope="col">full_desc</th>
                <th scope="col">resource_link</th>
                <th scope="col">Region</th>
                <th scope="col">Country</th>
                <th scope="col">Market</th>
                <th scope="col">Likes</th>
                <th scope="col">Img</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody id="tableStarup">
            {{#each startups}}
                    <tr>
                        <td>{{@index}}</td>
                        <td style="display:none;">{{_id}} </td>
                        <td>{{userId.name}}</td>
                        <td>{{userId.email}}</td>
                        <td ><img style="margin-top: 22px; margin-left: 15px" class="avatarUnderStartup" src="/{{userId.avatarUrl}}" alt="avatar-{{user.name}}"></td>
                        <td>{{title}}</td>
                        <td>{{desc}}</td>
                        <td >{{full_desc}}</td>
                        <td>{{resource_link}}</td>
                        <td>{{region}}</td>
                        <td>{{country}}</td>
                        <td>{{market_type}}</td>
                        <td>{{likeCount}}</td>
                        <td><img width="100px" src="{{img}}"  alt="{{title}}"></td>
                        <td>{{active}}</td>
                        <td>
                            <button 
                                style="width: 100px;"
                                class="btn deleteStartup" 
                                data-id={{_id}}
                                >Delete
                            </button>
                            <button 
                                style="width: 100px;"
                                class="btn publishStartup" 
                                data-id={{_id}}
                                >Publish
                            </button>
                           <a style="color: white;" href="/startups/edit/{{_id}}?allow=true"> <button style="width: 100px;"  class="btn ">Edit</button></a>
                        </td>
                    </tr>
            {{/each}}

            
        </tbody>
        </table>
{{/if}}

<div  style="flex: 0 0 auto; display: flex;">
    <button style="width:100px; margin-bottom: 30px; margin-left:42%" 
        class="btn uploadCardsAdminPrevious" 
        data-csrf={{csrf}}
        ><
    </button>
    <p id="numberPage" style="margin-left:30px; margin-right:30px; margin-top:5px">1</p>
    <button style="width:100px; margin-bottom: 30px;" 
        class="btn uploadCardsAdminNext" 
        data-csrf={{csrf}}
        >>
    </button>
</div>


